# Server Configuration
ADDR=:8080
EXTERNAL_URL=localhost:8080
ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
CORS_ALLOWED_ORIGIN=http://localhost:5173

# Database Configuration
DB_ADDR=postgres://admin:YOUR_DB_PASSWORD@localhost:5432/socialnetwork?sslmode=disable
DB_MAX_OPEN_CONNS=30
DB_MAX_IDLE_CONNS=30
DB_MAX_IDLE_TIME=15m

# Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PW=
REDIS_DB=0
REDIS_ENABLED=true

# Email Configuration (SendGrid)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE
FROM_EMAIL=noreply@yourdomain.com

# Authentication Configuration
AUTH_BASIC_USER=YOUR_BASIC_AUTH_USERNAME
AUTH_BASIC_PASS=YOUR_BASIC_AUTH_PASSWORD
AUTH_TOKEN_SECRET=YOUR_VERY_LONG_RANDOM_SECRET_AT_LEAST_32_CHARS

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATELIMITER_REQUESTS_COUNT=100
